-# frozen_string_literal: true
= simple_form_for(@athlete) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :line_id
    = f.input :line_name

  .form-actions
    = f.button :submit
