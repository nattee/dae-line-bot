-# frozen_string_literal: true
= simple_form_for(@line_group) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :race
    = f.input :line_group_id
    = f.input :line_id

  .form-actions
    = f.button :submit
