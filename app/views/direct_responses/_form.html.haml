-# frozen_string_literal: true
= simple_form_for(@direct_response) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :tag
    = f.input :text
    = f.input :response

  .form-actions
    = f.button :submit
